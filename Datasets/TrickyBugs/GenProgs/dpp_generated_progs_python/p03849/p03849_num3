import sys

MOD = 10**9 + 7

def count_pairs(N):
    # Calculate the number of pairs of u and v
    pairs = (N + 1) * (N + 2) // 2

    return pairs % MOD

def main():
    # Read the input value of N
    N = int(sys.stdin.readline().strip())

    # Calculate the number of pairs of u and v
    result = count_pairs(N)

    # Print the result
    print(result)

if __name__ == "__main__":
    main()