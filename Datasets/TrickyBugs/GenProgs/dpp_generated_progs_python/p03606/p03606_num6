# Getting input values
N = int(input())

# Initializing counter
total_people = 0

# Looping through each group
for _ in range(N):
    # Getting input for each group
    l, r = map(int, input().split())
    
    # Calculating number of people in each group
    num_people = r - l + 1
    
    # Adding number of people to total counter
    total_people += num_people

# Printing total number of people
print(total_people)