# get the number of groups
N = int(input())

# initialize the total number of people
total_people = 0

# loop through each group
for _ in range(N):
    # get the start and end seat number
    l, r = map(int, input().split())
    
    # calculate the number of people in the group
    people_in_group = r - l + 1
    
    # add the number of people in the group to the total
    total_people += people_in_group

# print the total number of people
print(total_people)