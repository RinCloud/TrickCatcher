```cpp
#include <iostream>

int main() {
    long long x;
    std::cin >> x;

    if (x % 7 == 0) {
        std::cout << x / 7 * 2 << std::endl;
    } else if ((x % 7) % 2 == 1 && x >= 14) {
        std::cout << x / 7 * 2 + 1 << std::endl;
    } else if ((x % 7) <= 5) {
        std::cout << x / 7 * 2 << std::endl;
    } else {
        std::cout << x / 7 * 2 + 2 << std::endl;
    }

    return 0;
}
```