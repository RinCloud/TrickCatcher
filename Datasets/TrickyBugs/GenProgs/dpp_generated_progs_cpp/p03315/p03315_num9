#include <iostream>
#include <string>

using namespace std;

int main() {
    string S;
    cin >> S;

    int count = 0;
    for (int i = 0; i < 4; i++) {
        if (S[i] == '+') {
            count++;
        } else {
            count--;
        }
    }

    cout << count << endl;

    return 0;
}