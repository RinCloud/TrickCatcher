#include <bits/stdc++.h>
using namespace std;
int k,n,fl=0; 
long long p=0,w=0;
long long X(int n){
	long long s=1,x=p*(k-1);
	for (int i=0;i<=n;++i){
		s*=k; 
		if (!fl&&s-1>x) return p+1;
	}
	return (s-1)/(k-1);
}
int main(){
	scanf("%d%d",&k,&n);
	if (k==1){
		for (int i=1;i<=(n+1)/2;++i) printf("1 ");
        puts(""); 
        return 0;
	}
	if (k&1){
		for (int i=1;i<=n;++i){
			w=X(n-i);
			if (!fl&&p<w) printf("%d ",k+1>>1),++p;
			else{
				fl=1;
				if (p>=0){
					int j=w*k+p+1>>1;
					if (j<=p) {
                        puts(""); 
                        return 0;
                    }
					j=(j-p-1)/w+1;
					printf("%d ",j);
					p+=(j+j-k-1)*w+1;
				}else{
					int j=w*k-p+1>>1;
					if (j>w*k) {puts(""); return 0;}
					j=(j-1)/w+1;
					printf("%d ",j);
					p+=(j+j-k-1)*w+1;
				}
			}
		}
	}else{
		printf("%d ",k/2);
		for (int i=1;i<n;++i) printf("%d ",k);
	}
	puts("");
    return 0;
}
