```cpp
#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main(){
  ll n, b, x, y, i;
  cin >> n;
  ll a[n];
  b = 0;
  for(i = 0; i < n; i++){
    cin >> a[i];
    b += a[i];
  }
  b = b / n;
  x = 0;
  y = 0;
  for(i = 0; i < n; i++){
    x += (a[i] - b) * (a[i] - b);
    y += (a[i] - b - 1) * (a[i] - b - 1);
  }
  cout << min(x, y);
}
```