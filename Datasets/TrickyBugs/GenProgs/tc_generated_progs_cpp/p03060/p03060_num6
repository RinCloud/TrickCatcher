```cpp
#include <iostream>
using namespace std;

#define LOOP(i,n) for(int i = 0; i < n; ++i)

int main()
{
  int n, s = 0; // Initialize s to 0
  int v[20], c[20];
  cin >> n;
  LOOP(i,n) cin >> v[i];
  LOOP(i,n) cin >> c[i];
  LOOP(i,n) if(v[i] > c[i]) s += v[i] - c[i]; // Make sure v[i] is greater than c[i]
  cout << s << "\n";
}
```