```cpp
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
#define rep(i,n) for(int i=0;i<(n);++i)

const int MAX = 2e5 + 5;

int main() {
  int n, p, t[MAX] = {0}, freq[MAX] = {0};
  string s;
  cin >> n >> p >> s;

  ll ans = 0;
  if (10 % p == 0) {
    rep(i,n) if ((s[i]-'0') % p == 0) ans += i+1;
  } else {
    reverse(s.begin(), s.end());
    int pw = 1;

    freq[0] = 1;
    for (int i = 0; i < n; i++) {
      int d = s[i] - '0';
      t[i] = (t[i - 1] + (pw * d) % p) % p;
      pw = pw * 10 % p;

      ans += freq[t[i]];
      freq[t[i]]++;
    }
  }

  cout << ans << endl;
  return 0;
}
```