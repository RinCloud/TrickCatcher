#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin >> n;
    int cnt = 0;
    for (int i = 0; i < n; i++)
    {
        int x;
        cin >> x;
        if (x != i + 1)
            cnt++;
    }
    if (cnt == 0 || cnt == 2)
        puts("YES");
    else
        puts("NO");
    return 0;
}